{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Plugin configuration",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Plugin package name (e.g. reverse TLD)"
    },
    "name": {
      "type": "string",
      "description": "Plugin name"
    },
    "organization": {
      "type": "string",
      "description": "Organization name"
    },
    "allowedCommunities": {
      "type": "array",
      "description": "List of community IDs allowed to install plugin",
      "items": {
        "type": "string"
      }
    },
    "version": {
      "type": "string",
      "description": "Plugin version (e.g. 1.0.0)"
    },
    "type": {
      "type": "string",
      "description": "Specifies who can install the plugin",
      "enum": ["user", "airline"]
    },
    "description": {
      "type": "string",
      "description": "Short description of the plugin"
    },
    "availableSettings": {
      "type": "object",
      "description": "List of setting the plugin has",
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "description": "Setting",
          "properties": {
            "name": {
              "type": "string",
              "description": "Setting name"
            },
            "description": {
              "type": "string",
              "description": "Setting description"
            },
            "type": {
              "type": "string",
              "description": "Type of setting",
              "enum": [
                "boolean",
                "range",
                "list",
                "number",
                "date",
                "json",
                "longtext",
                "radio",
                "text"
              ]
            },
            "required": {
              "type": "boolean",
              "description": "Marks setting as required"
            },
            "settingType": {
              "type": "string",
              "description": "Where this setting is set",
              "enum": ["user", "airline"]
            }
          },
          "unevaluatedProperties": false,
          "required": ["name", "type", "settingType"],
          "allOf": [
            {
              "if": { "properties": { "type": { "const": "boolean" } } },
              "then": {
                "properties": {
                  "default": {
                    "type": "boolean"
                  }
                }
              }
            },
            {
              "if": { "properties": { "type": { "const": "range" } } },
              "then": {
                "properties": {
                  "min": {
                    "type": "number",
                    "description": "Minimum value"
                  },
                  "max": {
                    "type": "number",
                    "description": "Maximum value"
                  },
                  "step": {
                    "type": "number",
                    "description": "Step size"
                  },
                  "default": {
                    "type": "number"
                  }
                },
                "required": ["min", "max", "step"]
              }
            },
            {
              "if": { "properties": { "type": { "const": "list" } } },
              "then": {
                "properties": {
                  "options": {
                    "type": "object",
                    "patternProperties": {
                      "^option_[1-9]+[0-9]*$": {
                        "type": "string",
                        "description": "Option"
                      }
                    },
                    "additionalProperties": false
                  },
                  "default": {
                    "type": "object",
                    "patternProperties": {
                      "^option_[1-9]+[0-9]*$": {
                        "type": "string",
                        "description": "Option"
                      }
                    },
                    "additionalProperties": false
                  }
                },
                "required": ["options"]
              }
            },
            {
              "if": { "properties": { "type": { "const": "number" } } },
              "then": {
                "properties": {
                  "min": {
                    "type": "number",
                    "description": "Minimum value"
                  },
                  "max": {
                    "type": "number",
                    "description": "Maximum value"
                  },
                  "step": {
                    "type": "number",
                    "description": "Step size"
                  },
                  "default": {
                    "type": "number"
                  }
                },
                "required": ["min", "max", "step"]
              }
            },
            {
              "if": { "properties": { "type": { "const": "date" } } },
              "then": {}
            },
            {
              "if": { "properties": { "type": { "const": "json" } } },
              "then": {
                "properties": {
                  "minLength": {
                    "type": "number",
                    "description": "Minimum length in chars"
                  },
                  "maxLength": {
                    "type": "number",
                    "description": "Maximum length in chars"
                  },
                  "default": {
                    "type": "string"
                  }
                },
                "required": ["minLength", "maxLength"]
              }
            },
            {
              "if": { "properties": { "type": { "const": "longtext" } } },
              "then": {
                "properties": {
                  "minLength": {
                    "type": "number",
                    "description": "Minimum length in chars"
                  },
                  "maxLength": {
                    "type": "number",
                    "description": "Maximum length in chars"
                  },
                  "default": {
                    "type": "string"
                  }
                },
                "required": ["minLength", "maxLength"]
              }
            },
            {
              "if": { "properties": { "type": { "const": "radio" } } },
              "then": {
                "properties": {
                  "options": {
                    "type": "object",
                    "patternProperties": {
                      "^option_[1-9]+[0-9]*$": {
                        "type": "string",
                        "description": "Option"
                      }
                    },
                    "additionalProperties": false
                  },
                  "default": {
                    "type": "object",
                    "patternProperties": {
                      "^option_[1-9]+[0-9]*$": {
                        "type": "string",
                        "description": "Option"
                      }
                    },
                    "additionalProperties": false
                  }
                },
                "required": ["options"]
              }
            },
            {
              "if": { "properties": { "type": { "const": "text" } } },
              "then": {
                "properties": {
                  "minLength": {
                    "type": "number",
                    "description": "Minimum length in chars"
                  },
                  "maxLength": {
                    "type": "number",
                    "description": "Maximum length in chars"
                  },
                  "pattern": {
                    "type": "string",
                    "description": "Regex pattern"
                  },
                  "default": {
                    "type": "string"
                  }
                },
                "required": ["minLength", "maxLength", "pattern"]
              }
            }
          ]
        }
      }
    }
  },
  "additionalProperties": false,
  "required": ["id", "name", "version", "type", "description"]
}
